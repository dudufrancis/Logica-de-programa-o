package aula07;

import javax.swing.JOptionPane;

public class Aula07 {

    public static void main(String[] args) {
        int numero = 0;
        do{
            numero = Integer.parseInt(JOptionPane.showInputDialog("Informe um valor positivo"));
        }while(numero < 0);

        while (numero >= 0) {
            System.out.println("numero :" + numero);
            numero--;
        }   
        
    }
    
}
